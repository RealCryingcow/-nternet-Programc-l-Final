@{
    var currentUser = Context.User.Identity.IsAuthenticated ? Context.User.Identity.Name : "Kullanıcı";
    var title = ViewData["Title"] ?? "Survey Portal";
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <title>@title - Survey Portal</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/startbootstrap-sb-admin-2@4.1.4/css/sb-admin-2.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />
    <style>
        body {
            background: #f8f9fc;
        }

        .sidebar {
            min-height: 100vh;
        }

        main {
            width: 100%;
        }

        .sidebar .nav-link.active, .sidebar .nav-link:hover {
            background: #224abe !important;
            color: #fff !important;
        }

        .sidebar .sidebar-brand {
            font-weight: bold;
        }
    </style>
</head>
<body>
    <div class="d-flex">
        <nav class="sidebar bg-gradient-primary p-3">
            <div class="sidebar-sticky">
                <div class="sidebar-brand d-flex align-items-center justify-content-center mb-4">
                    <div class="sidebar-brand-icon rotate-n-15">
                        <i class="fas fa-laugh-wink fa-2x text-white"></i>
                    </div>
                    <div class="sidebar-brand-text mx-3 text-white">SURVEY PORTAL</div>
                </div>
                <ul class="nav flex-column">
                    <li class="nav-item mb-2">
                        <a class="nav-link text-white" href="/Home/Index"><i class="fas fa-home"></i> Ana Sayfa</a>
                    </li>
                    <li class="nav-item mb-2">
                        <a class="nav-link text-white" href="/Home/Surveys"><i class="fas fa-poll"></i> Anketler</a>
                    </li>
                    <li class="nav-item mb-2">
                        <a class="nav-link text-white" href="/Home/MySurveys"><i class="fas fa-user-edit"></i> Benim Anketlerim</a>
                    </li>
                    <li class="nav-item mb-2">
                        <a class="nav-link text-white" href="/Home/AllSurveys"><i class="fas fa-globe"></i> Tüm Anketler</a>
                    </li>
                    <li class="nav-item mb-2">
                        <a class="nav-link text-white" href="/Home/Questions"><i class="fas fa-question"></i> Sorular</a>
                    </li>
                    <li class="nav-item mb-2">
                        <a class="nav-link text-white" href="/Home/Users"><i class="fas fa-users"></i> Kullanıcılar</a>
                    </li>
                    <li class="nav-item mb-2">
                        <a class="nav-link text-white" href="/Home/MyResponses"><i class="fas fa-reply"></i> Yanıtlarım</a>
                    </li>
                    <li class="nav-item mt-4">
                        <a class="nav-link text-light" href="/Home/Login" onclick="localStorage.removeItem('token')"><i class="fas fa-sign-out-alt"></i> Çıkış Yap</a>
                    </li>
                </ul>
            </div>
        </nav>
        <main role="main" class="flex-fill p-4">
            @RenderBody()
        </main>
    </div>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>